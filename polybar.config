[fonts]
font-0 = Cascadia Code Pl-bold:pixelsize=10:weight=Bold;1
font-1 = Font Awesome 5 Free Solid:weight=Bold:size=10;0
font-2 = siji:pixelsize=10:weight=Bold;2

[colors]
;background = ${xrdb:color0:#222}

;bar background except tags
background = #444444

background-alt = #9595b7
;foreground = ${xrdb:color7:#222}

;foreground for bar
foreground = #4cdbe0

;widget icon colrs
foreground-alt = #eeeeee

; tags background
primary = #444444
secondary = #4cdbe0
alert = #bd2c40

window-name-color = #ee9900

tag-focused-foreground = #ec5a9d
tag-unfocused-foreground = #ec5a9d
tag-visible-foreground = #33ff33

tag-focused-background = #9595b7
tag-unfocused-background = #444444
tag-visible-background = #50a5c7
tag-urgent-background = #005577

widget-color = #ec5a9d
widget-color-alt = #4cdbe0

[bar/mybar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 4
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 1
font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
modules-left = dwm
;modules-center = mpd
modules-right = mycpu mymemory gpu-temp wlan mynet myvolume mypacupdate date powermenu
tray-position = right
tray-padding = 2
;tray-background = #0063ff
cursor-click = pointer
cursor-scroll = ns-resize


[bar/mybar2]
monitor = ${env:MONITOR:DP-3}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}

modules-left = dwm
;modules-center = mpd
;modules-right = memory cpu wlan temperature myvolume date powermenu


tray-position = right
tray-padding = 2
;tray-background = #0063ff

cursor-click = pointer
cursor-scroll = ns-resize



[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


[module/mycpu]
type = custom/script
exec = ~/.config/polybar/scripts/cpu
;exec-if = pgrep -x openvpn
interval = 6
;format-underline = #268bd2
format-prefix = " "
format-prefix-foreground = ${colors.widget-color}
format-foreground = ${colors.widget-color}
format-suffix = |
click-left = notify-send " CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)"
click-middle = notify-send "CPU details"
click-right = st -e htop
scroll-up =
scroll-down =
double-click-left =
double-click-right =




[module/mymemory]
type = custom/script
exec = ~/.config/polybar/scripts/memory
;exec-if = pgrep -x openvpn
interval = 6
;format-underline = #268bd2
format-prefix = " "
format-prefix-foreground = ${colors.widget-color-alt}
format-foreground = ${colors.widget-color-alt}
format-suffix = |
click-left = notify-send "🧠 Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)"
click-middle = notify-send "🧠 Memory module" "\- Shows Memory Used."
click-right = st -e htop
scroll-up =
scroll-down =
double-click-left =
double-click-right =


[module/gpu-temp]
type = custom/script
exec = ~/.config/polybar/scripts/gpu-temp
;exec-if = pgrep -x openvpn
interval = 6
;format-underline = #268bd2
format-prefix = " "
format-prefix-foreground = ${colors.widget-color}
format-foreground = ${colors.widget-color}
format-suffix = |
click-left = notify-send "🧠 GPU Details" "$(nvidia-smi)"
click-middle = notify-send "Nvidia GPU" "\- Shows GPU Temp."
click-right = st -e nvidia-settings
scroll-up =
scroll-down =
double-click-left =
double-click-right =


[module/wlan]
type = internal/network
interface = wlp37s0
interval = 20.0
format-connected = <ramp-signal> <label-connected>
;format-connected-underline = #9f78e1
label-connected = %essid% |
;format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.widget-color-alt}
format-prefix-foreground = ${colors.widget-color-alt}
format-foreground = ${colors.widget-color-alt}
click-left = blueman-manager
click-middle = notify-send "Network" "Click for Wifi Manager
click-right = nm-applet
scroll-up =
scroll-down =
double-click-left =
double-click-right =


[module/mynet]
type = custom/script
exec = ~/.config/polybar/scripts/net
;exec-if = pgrep -x openvpn
interval = 10
;format-underline = #268bd2
format-prefix = ""
format-prefix-foreground = ${colors.widget-color}
format-foreground = ${colors.widget-color}
format-suffix = |
click-left = blueman-manager
click-middle = notify-send "Network" "Click for Wifi Manager
click-right = nm-applet
scroll-up =
scroll-down =
double-click-left =
double-click-right =


[module/myvolume]
type = custom/script
exec = ~/.config/polybar/scripts/volume
;exec-if = pgrep -x openvpn
interval = 5
;format-underline = #268bd2
format-prefix = ""
format-prefix-foreground = ${colors.widget-color-alt}
format-foreground = ${colors.widget-color-alt}
format-suffix = |
click-left = pavucontrol
click-middle = notify-send "Volume" "Click for Settings Right click for equalizer"
;click-right = pulseaudio-equalizer-gtk
scroll-up = "amixer -q -D pulse sset Master 5%+" 
scroll-down = "amixer -q -D pulse sset Master 5%-" 
double-click-left =
double-click-right =



[module/mypacupdate]
type = custom/script
exec = ~/.config/polybar/scripts/pacupdate
;exec-if = pgrep -x openvpn
interval = 600
;format-underline = #268bd2
format-prefix = " "
format-prefix-foreground = ${colors.widget-color}
format-foreground = ${colors.widget-color}
format-suffix = |
click-left = "st -e paru -Syu"
click-middle = notify-send "Pamac Update" "Click for update Right click for pacman"
click-right = pamac-manager
scroll-up = 
scroll-down = 
double-click-left =
double-click-right =


[module/date]
type = internal/date
interval = 15
date = " %a, %b %d"
date-alt = " %Y-%m-%d"
time = "%l:%M%p"
time-alt = %H:%M:%S
format-prefix = 
format-prefix-foreground = ${colors.widget-color-alt}
format-foreground = ${colors.widget-color-alt}
;format-underline = #0a6cf5
label = %date% %time% 
format-suffix = " |"

[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1
label-open = 
label-open-foreground = ${colors.widget-color}
label-close =  cancel
label-close-foreground = ${colors.widget-color}
label-separator = |
label-separator-foreground = ${colors.widget-color}
menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot
menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
format-suffix = " "


[module/dwm]
type = internal/dwm
format = <label-tags> <label-layout> <label-floating> <label-title>
; Path to dwm socket (default: /tmp/dwm.sock)
;socket-path = /tmp/dwm.sock

; Left-click to view tag, right-click to toggle tag view
enable-tags-click = true

enable-tags-scroll = true
tags-scroll-empty = false
tags-scroll-reverse = true
tags-scroll-wrap = true
; Left-click to set secondary layout, right-click to switch to previous layout
enable-layout-click = true
enable-layout-scroll = false
layout-scroll-wrap = false
layout-scroll-reverse = false

; If enable-layout-click = true, clicking the layout symbol will switch to this layout
secondary-layout-symbol = [M]

; Separator in between shown tags
; label-separator = |

label-title = %title%
label-title-maxlen = 65
label-title-padding = 1
label-title-foreground = ${colors.window-name-color}
label-title-background = ${colors.background}

label-layout = %symbol%
label-layout-padding = 1
label-layout-foreground = ${colors.foreground}
label-layout-background = ${colors.background}

; focused = Active tag on focused monitor
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-foreground = #ec5a9d
label-focused-padding = 1
label-focused-font = 7

; unfocused = Inactive tag on any monitor
label-unfocused = %name%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.tag-unfocused-foreground}
label-unfocused-padding = 1
label-unfocused-font = 7

; visible = Active tag on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.tag-visible-foreground}
label-visible-padding = 1
label-visible-font = 7

; urgent = Tag with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.tag-urgent-background}
label-urgent-padding = 1
label-urgent-font = 7

; empty = Unselected and unoccupied tag
; This can be set to an empty string to hide empty tags
label-empty = %name%
label-empty-background = ${colors.primary}
label-empty-foreground = ${colors.secondary}
label-empty-padding = 1

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
label = %percentage_used%%

[module/eth]
type = internal/network
interface = virbr0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750


[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume> 
;<bar-volume>
label-volume =  %percentage%% |
label-volume-foreground = ${colors.widget-color-alt}
label-muted =  muted
label-muted-foreground = ${colors.widget-color-alt}
bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.widget-color-alt}
interval = 10
click-left = pavucontrol
click-middle = notify-send "Volume" "Click for Settings Right click for equalizer"
click-right = pulseaudio-equalizer-gtk
scroll-up =
scroll-down =
double-click-left =
double-click-right =

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
interval = 5

format = <ramp> <label>
format-underline = ${colors.background}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.foreground-alt}



[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

