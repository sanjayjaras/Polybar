[fonts]
font-0 = Cascadia Code Pl-bold:pixelsize=10:weight=Bold;1
font-1 = Font Awesome 5 Free Solid:weight=Bold:size=10;0
font-2 = siji:pixelsize=10:weight=Bold;2

[colors]
;background = ${xrdb:color0:#222}
;bar background except tags
background = #444444
background-alt = #9595b7
;foreground = ${xrdb:color7:#222}
;foreground for bar
foreground = #4cdbe0
;widget icon colrs
foreground-alt = #eeeeee
; tags background
primary = #444444
secondary = #4cdbe0
alert = #bd2c40
window-name-color = #ee9900

tag-focused-foreground = #ec5a9d
tag-unfocused-foreground = #ec5a9d
tag-visible-foreground = #33ff33

tag-focused-background = #9595b7
tag-unfocused-background = #444444
tag-visible-background = #50a5c7
tag-urgent-background = #005577

widget-color = #ec5a9d
widget-color-alt = #4cdbe0

[bar/mybar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 4
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 1
font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
modules-left = dwm
;modules-center = mpd
modules-right = mycpu mymemory gpu-temp wlan mynet myvolume mypacupdate date powermenu
tray-position = right
tray-padding = 2
;tray-background = #0063ff
cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true


[bar/mybar2]
monitor = ${env:MONITOR:DP-3}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}

modules-left = dwm
;modules-center = mpd
;modules-right = memory cpu wlan temperature myvolume date powermenu


tray-position = right
tray-padding = 2
;tray-background = #0063ff

cursor-click = pointer
cursor-scroll = ns-resize



[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


